[Unit]
Description=Lemonbeat service
After=update-hw-revision.service environment.service ppp.service
Wants=update-hw-revision.service environment.service
ConditionPathExists=/etc/eol_test_passed

[Service]
Type=notify
Environment=RUST_LOG=info
ExecStart=/usr/bin/lemonbeatd

StateDirectory=lemonbeatd

Restart=on-failure
RestartSec=1m

# SG-18571 Turn memory bloat into a hard error
MemoryHigh=10M
MemoryMax=15M

[Install]
WantedBy=multi-user.target
