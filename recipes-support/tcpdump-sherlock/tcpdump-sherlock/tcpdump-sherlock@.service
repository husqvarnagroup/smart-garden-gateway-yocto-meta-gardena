[Unit]
Description=Store traffic locally to allow post mortem analysis
BindsTo=sys-devices-virtual-net-ppp0.device
After=sys-devices-virtual-net-ppp0.device
Before=shadoway.service

[Service]
Environment="SAVE_DIR=/tmp/tcpdump-sherlock"
ExecStartPre=/bin/mkdir -p "${SAVE_DIR}"
ExecStart=tcpdump --interface %I -W 5 -C 1 -w "${SAVE_DIR}/%I.pcap."
ExecStopPost=rm -r "${SAVE_DIR}"

[Install]
WantedBy=basic.target
WantedBy=shadoway.service
